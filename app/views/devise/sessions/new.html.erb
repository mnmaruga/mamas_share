<div class="wrapper">
<header class="header">
    <div class="title">
      <a href="/">
        <img class="title-logo" src="/assets/title2.jpg" alt="title">
      </a>    </div>
    <div class="user">
      
    </div>
</header>
<%= form_with model: @user, url: user_session_path, class: 'registration-main',local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      -ログイン-
    </h1>
    <div >
      アカウントをお持ちでない方は<%= link_to "新規登録", new_user_registration_path, class: "sign-up-button"%>画面へ
    </div>
  </div>

  <div class="form-main-session">
    <div class="form-left-session">
      <div class="form-group">
        <div>
          <label class="form-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <div>
          <label class="form-text">パスワード</label>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='info-text'>
          <br>※パスワードをお忘れの方は<%= link_to "こちら",  "#", class: 'info-text'%>をクリック
        </p>
      </div>
    </div>
  </div>
  <div>
    <%= f.submit "ログイン" ,class:"register-btn" %>
  </div>
</div>
<% end %>
</div>